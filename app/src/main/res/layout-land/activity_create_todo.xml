<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/container"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <Button
            android:id="@+id/button_save_1"
            android:layout_width="141dp"
            android:layout_height="49dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="18dp"
            android:background="#009688"
            android:text="@string/tombol_simpan"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_deskripsi" />

        <Button
            android:id="@+id/button_view_1"
            android:layout_width="141dp"
            android:layout_height="49dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="65dp"
            android:background="#FCFCFC"
            android:text="@string/tombol_lihat"
            android:textColor="#009688"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_deskripsi" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="497dp"
            android:layout_height="34dp"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:text="@string/nama_task"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="370dp"
            android:layout_height="32dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:text="@string/Tanggal"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_title" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="365dp"
            android:layout_height="37dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:text="@string/deskripsi"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_waktu_hh_1" />

        <EditText
            android:id="@+id/form_title"
            android:layout_width="520dp"
            android:layout_height="48dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/name_form"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/form_deskripsi"
            android:layout_width="485dp"
            android:layout_height="162dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/deskripsi"
            android:inputType="textMultiLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/form_tanggal_dd_1"
            android:layout_width="118dp"
            android:layout_height="61dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/day_form"
            android:inputType="date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />


        <EditText
            android:id="@+id/form_tanggal_mm_1"
            android:layout_width="153dp"
            android:layout_height="61dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="@string/month_form"
            android:inputType="date"
            app:layout_constraintEnd_toStartOf="@+id/form_tanggal_yy_1"
            app:layout_constraintStart_toEndOf="@+id/form_tanggal_dd_1"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/form_tanggal_yy_1"
            android:layout_width="164dp"
            android:layout_height="61dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/year_form"
            android:inputType="date"
            app:layout_constraintStart_toEndOf="@+id/form_tanggal_mm_1"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="361dp"
            android:layout_height="35dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:text="@string/Time"
            android:textColor="#000000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_tanggal_dd_1" />

        <EditText
            android:id="@+id/form_waktu_hh_1"
            android:layout_width="110dp"
            android:layout_height="60dp"

            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/hour_form"
            android:inputType="time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            android:layout_marginLeft="18dp" />

        <EditText
            android:id="@+id/form_waktu_minute_1"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="@string/Minute_form"
            android:inputType="time"
            app:layout_constraintStart_toEndOf="@+id/form_waktu_hh_1"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <CheckBox
            android:id="@+id/alarm_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:text="@string/set_alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/form_deskripsi" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
